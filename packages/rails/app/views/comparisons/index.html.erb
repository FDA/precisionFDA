<% content_for :title do %>Comparisons<% end %>

<div class="pfda-toolbar">
  <ul class="nav nav-pills nav-pills-center nav-pills-sm">
    <li class="<% if action_name == 'index' %>active<% end %>">
      <%= link_to comparisons_path do %>
        <span class="fa fa-bullseye"></span> <span class="pill-label">My Comparisons</span>
      <% end %>
    </li>
    <li class="<% if action_name == 'featured' %>active<% end %>">
      <%= link_to featured_comparisons_path do %>
        <span class="fa fa-flag"></span> <span class="pill-label">Featured</span>
      <% end %>
    </li>
    <li class="<% if action_name == 'explore' %>active<% end %>">
      <%= link_to explore_comparisons_path do %>
        <span class="fa fa-globe"></span> <span class="pill-label">Explore</span>
      <% end %>
    </li>
  </ul>
</div>

<div class="pfda-toolbar">
  <div class="btn-group">
    <a class="btn btn-primary" href="<%= new_comparison_path %>">
      <span class="fa fa-bolt fa-fw"></span>Run Comparison
    </a>
  </div>
</div>

<% if @comparisons_grid.present? %>
  <%= render "comparisons/grid", comparisons_grid: @comparisons_grid %>
<% else %>
  <div class="alert alert-info">
    <% if action_name == 'index' %>
      <span class="fa fa-info-circle"></span> Comparison you run will show up here. Meanwhile, check out our <%= link_to "Featured Comparisons", featured_comparisons_path %> or <%= link_to "explore community contributions", explore_comparisons_path %>
    <% else %>
      We couldn't find any comparisons here
    <% end %>
  </div>
<% end %>
