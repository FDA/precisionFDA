<%= grid(users_grid, show_filters: :always) do |g|
  g.blank_slate partial:  "_partials/empty_grid"

  g.column name: 'Name' do |user|
    link_to(user.full_name, user_path(user.dxuser))
  end

  g.column name: 'Username', attribute: 'dxuser' do |user|
    user.dxuser
  end


  g.column name: 'Org', attribute: 'name', assoc: [:org] do |user|
    if user.org.real_org?
      user.org.name
    else
      nil
    end
  end
end -%>
