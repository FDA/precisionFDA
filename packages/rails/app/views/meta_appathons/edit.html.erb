<% content_for :title do %>Edit <%= @meta_appathon.title %><% end %>

<div class="page-header">
  <div class="page-title">
    <span class="fa fa-flag-checkered"></span>
    Edit <%= @meta_appathon.title %>
  </div>
</div>

<div class="container-fluid container-padded">
  <%= form_for @meta_appathon, url: meta_appathon_path(@meta_appathon), method: :put, html: {class: 'form form-horizontal'} do |f| %>
    <%= render "_partials/form_errors", object: @meta_appathon %>
    <div class="form-group required">
      <%= f.label :name, "Name", class: 'control-label col-sm-2' %>
      <div class="col-sm-11 col-sm-offset-1">
        <%= f.text_field :name, class: "form-control input-lg", placeholder: "Name this meta_appathon...", required: "required"  %>
      </div>
    </div>
    <div class="form-group required">
      <%= f.label :handle, "Handle", class: 'control-label col-sm-2' %>
      <div class="col-sm-11 col-sm-offset-1">
        <%= f.text_field :handle, class: "form-control input-lg", placeholder: "Appathon handle...", required: "required"  %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :template, "Template", class: 'control-label col-sm-2' %>
      <div class="col-sm-11 col-sm-offset-1">
        <%= f.text_field :template, class: "form-control input-lg", placeholder: "Custom template name..."  %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, "Description", class: 'control-label col-sm-2' %>
      <div class="col-sm-11 col-sm-offset-1">
        <%= f.text_area :description, class: "form-control", rows: 10, placeholder: "What is this meta appathon about..." %>
      </div>
    </div>
    <div class="form-group required">
      <%= f.label :start_at, "Starts at", class: 'control-label col-sm-2' %>
      <div class="col-sm-11 col-sm-offset-1">
        <%= f.datetime_local_field :start_at, class: "form-control", required: "required" %>
      </div>
    </div>
    <div class="form-group required">
      <%= f.label :end_at, "Ends at", class: 'control-label col-sm-2' %>
      <div class="col-sm-11 col-sm-offset-1">
        <%= f.datetime_local_field :end_at, class: "form-control", required: "required" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-3">
        <%= f.submit "Update", class: 'btn btn-primary', data: {disable_with: "Updating..."} %>
      </div>
    </div>
  <% end %>
</div>
