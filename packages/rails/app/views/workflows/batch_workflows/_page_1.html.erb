<div class="hidden" data-bind="css: { hidden: step() != 1 }">
<!-- ko if: step() == 1 -->

  <h4 class="batch-workfows-wizard-header">Page 1 of 3: Configure Batch Workflow</h4>
  <div class="batch-workfows-wizard-info">
    <div class="alert alert-info">
      <div class="row">
        <div class="col-sm-1 text-center">
          <i class="fa fa-info-circle"></i>
        </div>
        <div class="col-sm-23">
          <div>
            The user must at least select a parameter for Batch Input 1 and may optionally select a parameter for Batch Input 2.
          </div>
          <div>
            Only file and string parameters can be used for batch input.
          </div>
          <div>
            If two inputs are configured, they must be of the same class (i.e. both strings or both files).
          </div>
        </div>
      </div>
    </div>
    <div class="alert alert-info">
      <div class="row">
        <div class="col-sm-1 text-center">
          <i class="fa fa-info-circle"></i>
        </div>
        <div class="col-sm-23">
          No paired input.
        </div>
      </div>
    </div>
  </div>

  <div class="app-spec">
    <div class="app-spec-column">
      <%= render "workflows/batch_workflows/spec_rows" %>
    </div>
  </div>

  <div class="batch-workfows-wizard-buttons row">
    <div class="pull-right">
      <a class="btn btn-default" href="<%= workflow_analyses_path(@workflow) %>">Back</a>
      <button class="btn btn-primary" data-bind="disable: Step1toStep2Disabled, click: nextToStep2">Next</button>
    </div>
  </div>

<!-- /ko -->
</div>
