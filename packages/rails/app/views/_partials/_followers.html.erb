<ul class="list-inline list-inline-padding-vertical">
  <% followers.each do |follower| %>
  <li title="<%= follower.full_name %> (<%= follower.org.name %>)" data-toggle="tooltip">
    <%= link_to user_path(follower.dxuser), class: 'pfda-follower text-center', data: { follower_uid: follower.uid, followable_uid: followable.uid } do %>
      <%= image_tag(follower.gravatar_url, class: 'img-circle center-block', height: '50px') %>
      <% if defined?(display_names) && display_names  %><%= follower.first_name %> <%= follower.last_name[0] %><% end %>
    <% end %>
  </li>
  <% end %>
  <% if !followers.exists?(@context.user_id) && @context.logged_in? %>
    <li title="<%= @context.user.full_name %> (<%= @context.user.org.name %>)" data-toggle="tooltip" style="display: none">
      <%= link_to user_path(@context.user.dxuser), class: 'pfda-follower', data: { follower_uid: @context.user.uid, followable_uid: followable.uid } do %>
        <%= image_tag(@context.user.gravatar_url, class: 'img-circle', height: '50px') %>
        <% if defined?(display_names) && display_names %><%= @context.user.first_name %> <%= @context.user.last_name[0] %><% end %>
      <% end %>
    </li>
  <% end %>
</ul>
