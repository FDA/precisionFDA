<% if @context.logged_in? %>
  <a class="btn-upvote-link event-upvote <%= defined?(classes) ? classes : '' %> <%= @context.user.voted_up_on?(item) ? 'active': ''%>" data-uid="<%= item.uid %>" data-upvote-count="<%= item.get_upvotes.size %>" data-vote-scope="<%= defined?(vote_scope) ? vote_scope : '' %>">
    <span class="fa fa-caret-up <%= defined?(icon_classes) ? icon_classes : '' %>"></span> <span class="upvote-label"></span> | <span class="upvote-count"><%= item.get_upvotes.size %></span>
  </a>
<% else %>
  <a class="btn-upvote-link disabled <%= defined?(classes) ? classes : '' %>">
    <span class="fa fa-caret-up <%= defined?(icon_classes) ? icon_classes : '' %>"></span> <span>Upvotes</span> | <span class="upvote-count"><%= item.get_upvotes.size %></span>
  </a>
<% end %>
