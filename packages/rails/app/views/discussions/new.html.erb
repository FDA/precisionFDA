<% content_for :title do %>Start New Discussion<% end %>

<div class="page-header">
  <div class="page-title">
    <span class="fa fa-comments-o"></span>
    Start a new discussion
  </div>
</div>

<div class="container-fluid container-padded">
  <%= form_for @discussion, url: discussions_path, html: {class: 'form form-horizontal'} do |f| %>
    <%= render "_partials/form_errors", object: @discussion %>
    <div class="form-group required">
      <%= f.label :title, "Question", class: 'control-label col-sm-2' %>
      <div class="col-sm-19 col-sm-offset-1">
        <%= f.text_field :title, class: "form-control input-lg", placeholder: "Ask your discussion question...", required: "required"  %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, "Description", class: 'control-label col-sm-2' %>
      <div class="col-sm-19 col-sm-offset-1">
        <%= f.text_area :description, class: "form-control", rows: 10, placeholder: "Additional information about your question..." %>
      </div>
    </div>
    <!-- <div class="form-group required">
      <label class= "col-sm-4 control-label" for="name">Topics</label>
      <div class="col-sm-19 col-sm-offset-1">
        <input type="text" name="name" class="form-control" placeholder="Topics to add this discussion to...">
      </div>
    </div> -->
    <div class="form-group">
      <div class="col-sm-offset-3">
        <%= f.submit "Create", class: 'btn btn-primary', data: {disable_with: "Creating..."} %>
      </div>
    </div>
  <% end %>
</div>
