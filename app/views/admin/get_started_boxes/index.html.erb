<% content_for :title do %>Get started boxes<% end %>

<%= render partial: "admin/_partials/workbench_toolbar" %>

<div class="pfda-toolbar">
  <div class="btn-group">
    <%= link_to new_admin_get_started_box_path, class: 'btn btn-primary' do %>
      <span class="fa fa-plus fa-fw"></span> New box
    <% end %>
  </div>
  <div class="btn-group" style="display: none;" data-bind="visible: displaySave">
    <button class="btn btn-success" data-bind="click: saveSortBoxes">
      <span class="fa fa-save fa-fw"></span> Save
    </button>
  </div>
</div>

<% if @public_boxes.any? || @private_boxes.any? %>
  <%= render partial: "admin/get_started_boxes/boxes" %>
<% else %>
  <div class="container-fluid container-padded">
    <div class="alert alert-info">
      We couldn't find any boxes here
    </div>
  </div>
<% end %>
