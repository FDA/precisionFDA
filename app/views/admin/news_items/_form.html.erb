<%= simple_form_for [:admin, item], html:{ class: 'form-horizontal'} ,wrapper: :horizontal_form do |f| %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :created_at, as: :date, label: "Date" %>
    <%= f.input :link %>
    <%= f.input :content %>
    <%= f.input :video %>
    <%= f.input :published %>
  </div>
  <div class="form-actions col-sm-offset-3">
    <%= link_to 'Back', admin_news_items_url, class: 'btn btn-warning'  %>
    <%= f.button :submit %>
  </div>
<% end %>
