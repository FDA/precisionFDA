<% content_for :title do %>Organizations<% end %>

<div class="page-header">
  <div class="media">
    <div class="media-body">
      <div class="page-title">
        <i class="fa fa-bar-chart" aria-hidden="true"></i>
        New Organization
      </div>
    </div>
  </div>
</div>

<div class="container-fluid container-padded">
  <%= form_for @org, url: admin_provision_org_path, method: "POST", html: {class: 'form form-horizontal'}  do |f| %>

    <div class="form-group required">
      <%= f.label :name, "Name", class: 'control-label col-sm-2' %>
      <div class="col-sm-11 col-sm-offset-1">
      <%= f.text_field :name, class: "form-control input-lg", placeholder: "Name this space...", required: "required"  %>
      </div>
    </div>

     <div class="form-group required">
      <%= f.label :handle, "Handle", class: 'control-label col-sm-2' %>
      <div class="col-sm-11 col-sm-offset-1">
      <%= f.text_field :handle, class: "form-control input-lg", placeholder: "what is the handle...", required: "required"  %>
      </div>
    </div>

     <div class="form-group required">
      <%= f.label :name, "Admin", class: 'control-label col-sm-2' %>
      <div class="col-sm-11 col-sm-offset-1">
      <%= f.select :name, options_for_select(User.all.map{|u| [u.dxuser, u.id]}),  class: "form-control input-lg" %>
      </div>
    </div>

     <div class="form-group required">
      <%= f.label :address, "Address", class: 'control-label col-sm-2' %>
      <div class="col-sm-11 col-sm-offset-1">
      <%= f.text_area :address, class: "form-control input-lg", placeholder: "Address...", required: "required"  %>
      </div>
    </div>

     <div class="form-group required">
      <%= f.label :duns, "DUNS", class: 'control-label col-sm-2' %>
      <div class="col-sm-11 col-sm-offset-1">
      <%= f.text_field :duns, class: "form-control input-lg", placeholder: "DUNS number...", required: "required"  %>
      </div>
    </div>

     <div class="form-group required">
      <%= f.label :phone, "Phone", class: 'control-label col-sm-2' %>
      <div class="col-sm-11 col-sm-offset-1">
      <%= f.text_field :phone, class: "form-control input-lg", placeholder: "Phone number...", required: "required"  %>
      </div>
    </div>

     <div class="form-group required">
      <%= f.label :state, "State", class: 'control-label col-sm-2' %>
      <div class="col-sm-11 col-sm-offset-1">
      <%= f.text_field :state, class: "form-control input-lg", placeholder: "State...", required: "required"  %>
      </div>
    </div>

     <div class="form-group required">
      <%= f.label :singular, "Singular", class: 'control-label col-sm-2' %>
      <div class="col-sm-11 col-sm-offset-1">
      <%= f.check_box :singular, class: "form-control pull-left" ,placeholder: "Singular...", required: "required"  %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-3">
        <%= f.submit "Create", class: 'btn btn-primary', data: {disable_with: "Creating..."} %>
      </div>
    </div>
  <% end %>
</div>
