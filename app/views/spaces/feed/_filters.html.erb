<div id="feed_filters_form" class="feed-filters-form collapse in" aria-expanded="true">
  <form class="form-inline">
    <div class="panel spaces-blue-panel">
      <div class="panel-heading">
        <h4>
          DATE/TIME FILTERS
          <button type="button" class="btn btn-link" data-bind="click: resetDateFilters">Reset</button>
        </h4>
      </div>
      <div class="panel-body panel-body-blue">
        <div class="btn-group pull-left" role="group" aria-label="Select date range" id="select_date_range">
          <button class="btn btn-default" data-type="day">Day</button>
          <button class="btn btn-default active" data-type="week">Week</button>
          <button class="btn btn-default" data-type="month">Month</button>
          <button class="btn btn-default" data-type="year">Year</button>
        </div>
        <div class="form-group">
          <input type="text" class="form-control add-datetimepicker" name="date_at" />
        </div>
        <div class="form-group">
          <input type="text" class="form-control add-datetimepicker" name="date_to" />
        </div>
      </div>
    </div>
    <div class="panel spaces-blue-panel">
      <div class="panel-heading">
        <h4>
          USERS FILTERS
          <button type="button" class="btn btn-link" data-bind="click: resetUserFilters">Reset</button>
        </h4>
      </div>
      <div class="panel-body panel-body-blue">
        <div class="form-group">
          <select class="form-control selectpicker" multiple="multiple" name="users[]" title="Select User">
            <% @users.each do |user| %>
              <option value="<%= user[:value] %>"><%= user[:name] %></option>
            <% end %>
          </select>
        </div>
        <div class="form-group">
          <select class="form-control selectpicker" multiple="multiple" name="roles[]" title="Select Role">
            <% @roles.each do |role| %>
              <option value="<%= role[:value] %>"><%= role[:name] %></option>
            <% end %>
          </select>
        </div>
        <div class="form-group">
          <select class="form-control" name="side" title="Select Side">
            <option value="null">Select Side</option>
            <% @sides.each do |side| %>
              <option value="<%= side[:value] %>"><%= side[:name] %></option>
            <% end %>
          </select>
        </div>
      </div>
    </div>
    <div class="panel spaces-blue-panel">
      <div class="panel-heading">
        <h4>
          OBJECT TYPES
          <button type="button" class="btn btn-link" data-bind="click: selectAllTypesCheckboxes">Select all</button>
          <button type="button" class="btn btn-link" data-bind="click: clearAllTypesCheckboxes">Clear all</button>
        </h4>
      </div>
      <div class="panel-body">
        <div class="spaces-feed-types">
          <!-- ko foreach: objectTypes -->
            <div class="feed-type">
              <div class="feed-type-label">
                <input type="checkbox" name="object_type[]" data-bind="event: {
                    change: $parent.handleCheckboxChage.bind($parent)
                  }, attr: {
                    id: 'object_types_' + $data.name,
                    value: $data.type_id,
                    checked: $parent.isTypeChecked($data.type_id)
                }">
                <label class="feed-type-icon" data-bind="style: {
                  backgroundColor: $parent.getTypeColor($data.name)
                  }, attr: {
                  title: $parent.typesLabel($data),
                  for: 'object_types_' + $data.name
                }">
                  <i class="fa" data-bind="css: $parent.getLabelIcon($data.name)"></i>
                </label>
              </div>
              <div class="feed-type-count">
                <span data-bind="text: $data.value"></span>
              </div>
            </div>
          <!-- /ko -->
        </div>
      </div>
    </div>
    <div class="panel spaces-blue-panel">
      <div class="panel-body">
        <div class="row">
          <div class="pull-right">
            <button type="button" class="btn btn-primary" data-bind="click: submitFilters">Submit</button>
            <button type="button" class="btn btn-default" data-bind="click: resetFilters">Reset</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
