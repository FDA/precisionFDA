<div id="make_active_task_modal" class="modal fade tasks-actions-modal modal-with-loader" data-bind="css: {loading: makeActiveTaskModal.isLoading}">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
          Make Active <span data-bind="text: makeActiveTaskModal.tasksCount"></span> Task(s)
        </h4>
      </div>
      <div class="loader-container">
        <div class="loader">
          <i class="fa fa-spinner fa-spin"></i>
        </div>
      </div>
      <div class="modal-body">
        Please provide an explanation for activating this task (optional):
        <textarea
          name="body"
          class="form-control"
          cols="30"
          rows="10"
          data-bind="value: makeActiveTaskModal.commentText"
        ></textarea>
      </div>
      <div class="modal-footer">
        <button
          class="btn btn-default"
          data-dismiss="modal"
          data-bind="disable: makeActiveTaskModal.actionsDisabled"
          tabindex="-1"
        >Cancel</button>
        <button
          id="make_active_task_modal_submit"
          class="btn btn-success"
          data-bind="disable: makeActiveTaskModal.actionsDisabled"
          >
            <i class="fa fa-repeat"></i>&nbsp;Make Active Task(s)
          </button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
