<% nav = generate_nav_data(@space, action_name, @counts, params) %>

<div class="pfda-pane-sidebar pfda-pane-sidebar-dark">
  <div class="list-group list-group-spaces">
    <% if @space.review? %>
    <%= sidenav_link(nav.dig(:feed, :url), nav.dig(:feed, :active), 'fa-list', nav.dig(:feed, :count), 'ACTIVITY') %>
    <a id="child_tasks_switch"
      href="javascript: void(0)"
      data-toggle="collapse"
      aria-expanded="true"
      data-target="#child_tasks_container"
      class="list-group-item list-item-spaces word-break-all"
    >
      <span class="list-group-item-label">
        <i class="fa fa-check-square-o" aria-hidden="true"></i>Tasks
      </span>
      <span class="list-group-item-cnt">
        <i class="fa fa-chevron-down" aria-hidden="true"></i>
      </span>
    </a>
    <div id="child_tasks_container" class="collapse in" aria-expanded="true">
      <%= child_sidenav_link(nav.dig(:awaiting_tasks, :url), nav.dig(:awaiting_tasks, :active), 'fa-hourglass-half', nav.dig(:awaiting_tasks, :count), 'Awaiting Response') %>
      <%= child_sidenav_link(nav.dig(:active_tasks, :url), nav.dig(:active_tasks, :active), 'fa-check', nav.dig(:active_tasks, :count), 'Active Tasks') %>
      <%= child_sidenav_link(nav.dig(:completed_tasks, :url), nav.dig(:completed_tasks, :active), 'fa-check-square-o', nav.dig(:completed_tasks, :count), 'Completed Tasks') %>
      <%= child_sidenav_link(nav.dig(:declined_tasks, :url), nav.dig(:declined_tasks, :active), 'fa-times', nav.dig(:declined_tasks, :count), 'Declined Tasks') %>
    </div>
    <% end %>
    <%= sidenav_link(nav.dig(:files, :url), nav.dig(:files, :active), 'fa-files-o', nav.dig(:files, :count), 'Files') %>
    <%= sidenav_link(nav.dig(:notes, :url), nav.dig(:notes, :active), 'fa-sticky-note', nav.dig(:notes, :count), 'Notes') %>
    <%= sidenav_link(nav.dig(:assets, :url), nav.dig(:assets, :active), 'fa-file-zip-o', nav.dig(:assets, :count), 'Assets') %>
    <%= sidenav_link(nav.dig(:apps, :url), nav.dig(:apps, :active), 'fa-cubes', nav.dig(:apps, :count), 'Apps') %>
    <%= sidenav_link(nav.dig(:jobs, :url), nav.dig(:jobs, :active), 'fa-list-ol', nav.dig(:jobs, :count), 'Jobs') %>
    <%= sidenav_link(nav.dig(:comparisons, :url), nav.dig(:comparisons, :active), 'fa-bullseye', nav.dig(:comparisons, :count), 'Comparisons') %>
    <% if @space.review? %>
      <%= sidenav_link(nav.dig(:workflows, :url), nav.dig(:workflows, :active), 'fa-flash', nav.dig(:workflows, :count), 'Workflows') %>
    <%= sidenav_link(nav.dig(:reports, :url), nav.dig(:reports, :active), 'fa-exchange', nav.dig(:reports, :count), 'Reports') %>
    <% end %>
  </div>
</div>
