<% if @context.logged_in_or_guest? || !(params[:controller] == 'main' && params[:action] == 'index') %>
<nav class="navbar navbar-inverse navbar-static-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#pfda-navbar-collapse" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag("precisionFDA.white.navbar.png", alt: "PrecisionFDA Home", height: "33px"), root_path, class: "navbar-brand"  %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="pfda-navbar-collapse">
      <%= render "_partials/nav_links" %>
  </div>
</nav>
<% end %>
