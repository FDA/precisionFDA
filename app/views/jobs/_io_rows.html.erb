<% items.each do |item| %>
  <tr>
    <td class="job-io-label" title="<%= item.help %>">
      <% if item.label.present? %>
        <%= item.label %>
      <% else %>
        <%= item.name %>
      <% end %>
    </td>
    <td class="job-io-value job-io-class-<%= item.klass %>">
      <% if item.file? %>
        <% if item.file.present? %>
          <%= unilink(item.file) %>
        <% else %>
          <%= item.value %>
        <% end %>
      <% else %>
        <%= item.value %>
      <% end %>
    </td>
  </tr>
<% end %>
