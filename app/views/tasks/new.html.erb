<%= render "spaces/header" %>

<div class="tab-content">
  <div role="tabpanel" class="tab-pane active" id="tab-tasks">

    <div class="panel">
      <div class="panel-body">

        <%= form_for @task, url: space_tasks_path(@space), method: :post, html: {class: 'form form-horizontal'} do |f| %>
          <%= render "_partials/form_errors", object: @task %>
          <div class="form-group required">
            <%= f.label :name, "Name", class: 'control-label col-sm-2' %>
            <div class="col-sm-11 col-sm-offset-1">
              <%= f.text_field :name, class: "form-control input-lg"  %>
            </div>
          </div>
          <div class="form-group required">
            <%= f.label :assignee_id, "Assign to", class: 'control-label col-sm-2' %>
            <div class="col-sm-11 col-sm-offset-1">
              <%= f.text_field :assignee_id, class: "form-control input-lg"  %>
            </div>
          </div>
          <div class="form-group required">
            <%= f.label :response_deadline, "Response deadline", class: 'control-label col-sm-2' %>
            <div class="col-sm-11 col-sm-offset-1">
              <%= f.text_field :response_deadline, value: @task.response_deadline.try(:to_s, :datepicker), class: "form-control add-datetimepicker", placeholder: 'Select date' %>
            </div>
          </div>
          <div class="form-group required">
            <%= f.label :completion_deadline, "Completion deadline", class: 'control-label col-sm-2' %>
            <div class="col-sm-11 col-sm-offset-1">
              <%= f.text_field :completion_deadline, value: @task.completion_deadline.try(:to_s, :datepicker), class: "form-control add-datetimepicker", placeholder: 'Select date' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :description, "Description", class: 'control-label col-sm-2' %>
            <div class="col-sm-11 col-sm-offset-1">
              <%= f.text_area :description, class: "form-control", rows: 10 %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-3">
              <%= link_to "Cancel", :back, type: :reset %>
              <%= f.submit "Create", class: 'btn btn-primary', data: {disable_with: "Creating..."} %>
            </div>
          </div>
        <% end %>

      </div>
    </div>

  </div>
</div>

